<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_base__acid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.og.matter.Base_Acid"
    tools:showIn="@layout/app_bar_base__acid">

    <RadioGroup
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/radioGroup">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="חומצה"
            android:onClick="acid"
            android:textSize="18sp"
            android:id="@+id/radioButton" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="בסיס"
            android:onClick="base"
            android:textSize="18sp"
            android:id="@+id/radioButton2"
            android:checked="false" />
    </RadioGroup>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:hint="חומצה/בסיס"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="H2O"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/textView18"
        android:layout_alignTop="@+id/textView17"
        android:layout_toRightOf="@+id/textView17"
        android:layout_toEndOf="@+id/textView17"
        android:layout_alignBottom="@+id/textView17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/textView17"
        android:layout_toRightOf="@+id/editText"
        android:layout_toEndOf="@+id/editText"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignTop="@+id/editText" />

    <Space
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:id="@+id/space3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="נקה"
        android:onClick="cleanbacid"
        android:id="@+id/button12"
        android:layout_alignBottom="@+id/space3"
        android:layout_toRightOf="@+id/space3"
        android:layout_toEndOf="@+id/space3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="בצע תהליך"
        android:onClick="bacid"
        android:id="@+id/button11"
        android:layout_alignBottom="@+id/space3"
        android:layout_toLeftOf="@+id/space3"
        android:layout_toStartOf="@+id/space3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="➙"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/textView19"
        android:layout_alignBottom="@+id/textView18"
        android:layout_toRightOf="@+id/textView4"
        android:layout_alignTop="@+id/textView4" />

    <TextView
        android:text="(l)"
        android:textSize="13sp"
        android:gravity="center|left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/textView18"
        android:layout_toRightOf="@+id/textView18"
        android:layout_alignBottom="@+id/textView18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/textView22"
        android:layout_alignTop="@+id/textView19"
        android:layout_toRightOf="@+id/textView19"
        android:layout_toEndOf="@+id/textView19"
        android:layout_alignBottom="@+id/textView19" />

    <TextView
        android:text=""
        android:textSize="14sp"
        android:gravity="bottom|left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:layout_alignTop="@+id/textView24"
        android:layout_toRightOf="@+id/textView24"
        android:layout_toEndOf="@+id/textView24"
        android:layout_alignBottom="@+id/textView24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/textView21"
        android:layout_alignTop="@+id/textView16"
        android:layout_toRightOf="@+id/textView16"
        android:layout_toEndOf="@+id/textView16"
        android:layout_alignBottom="@+id/textView16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/textView20"
        android:layout_alignTop="@+id/textView21"
        android:layout_toRightOf="@+id/textView21"
        android:layout_toEndOf="@+id/textView21"
        android:layout_alignBottom="@+id/textView21" />

    <TextView
        android:text=""
        android:textSize="14sp"
        android:gravity="bottom|left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView23"
        android:layout_toRightOf="@+id/textView25"
        android:layout_toEndOf="@+id/textView25"
        android:layout_alignBottom="@+id/textView25"
        android:layout_alignTop="@+id/textView25" />

    <TextView
        android:text=""
        android:textSize="13sp"
        android:gravity="top|left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView25"
        android:layout_alignTop="@+id/textView20"
        android:layout_toRightOf="@+id/textView20"
        android:layout_toEndOf="@+id/textView20"
        android:layout_alignBottom="@+id/textView20" />

    <TextView
        android:text=""
        android:textSize="13sp"
        android:gravity="top|left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView24"
        android:layout_alignTop="@+id/textView22"
        android:layout_toRightOf="@+id/textView22"
        android:layout_toEndOf="@+id/textView22"
        android:layout_alignBottom="@+id/textView22" />

</RelativeLayout>
