<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_fatty__acid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.og.matter.Fatty_Acid"
    tools:showIn="@layout/app_bar_fatty__acid">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Ex:C16:1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="45dp"
        android:id="@+id/editText3" />

    <TextView
        android:text="ω"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editText3"
        android:layout_toRightOf="@+id/editText3"
        android:layout_toEndOf="@+id/editText3"
        android:id="@+id/textView32"
        android:layout_alignBottom="@+id/editText3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Ex:3"
        android:layout_alignTop="@+id/textView32"
        android:layout_toRightOf="@+id/textView32"
        android:layout_toEndOf="@+id/textView32"
        android:id="@+id/editText4" />

    <Spinner
        android:layout_width="wrap_content"
        android:entries="@array/fattyE"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/editText4"
        android:id="@+id/spinner"
        android:layout_alignTop="@+id/editText4"
        android:layout_alignBottom="@+id/editText4" />

    <TextView
        android:text=""
        android:textColor="#FF0000"
        android:textSize="27sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_toRightOf="@+id/spinner"
        android:layout_toEndOf="@+id/spinner"
        android:id="@+id/textView33"
        android:layout_alignTop="@+id/spinner"
        android:layout_alignBottom="@+id/spinner" />

    <TextView
        android:text="ω"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView34"
        android:layout_toRightOf="@+id/editText5"
        android:layout_toEndOf="@+id/editText5"
        android:layout_alignTop="@+id/editText5"
        android:layout_alignBottom="@+id/editText5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Ex:3"
        android:layout_alignBottom="@+id/textView34"
        android:layout_toRightOf="@+id/textView34"
        android:layout_toEndOf="@+id/textView34"
        android:id="@+id/editText7" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/fattyE"
        android:layout_alignTop="@+id/editText7"
        android:layout_toRightOf="@+id/editText7"
        android:layout_toEndOf="@+id/editText7"
        android:id="@+id/spinner2"
        android:layout_alignBottom="@+id/editText7" />

    <Space
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/space6"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <Button
        android:text="נקה"
        android:onClick="clearFatty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignBottom="@+id/space6"
        android:layout_toRightOf="@+id/space6"
        android:layout_toEndOf="@+id/space6" />

    <Button
        android:text="השווה"
        android:onClick="fatty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/space6"
        android:layout_toLeftOf="@+id/space6"
        android:layout_toStartOf="@+id/space6"
        android:id="@+id/button2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Ex:C18:1"
        android:id="@+id/editText5"
        android:layout_alignTop="@+id/textView33"
        android:layout_toRightOf="@+id/textView33"
        android:layout_toEndOf="@+id/textView33" />

    <TextView
        android:text=""
        android:textSize="13sp"
        android:textColor="#000000"
        android:gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText3"
        android:id="@+id/textView35"
        android:layout_above="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
