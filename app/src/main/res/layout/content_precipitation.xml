<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_precipitation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.og.matter.Precipitation"
    tools:showIn="@layout/app_bar_precipitation">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="בצע תהליך"
        android:onClick="pre"
        android:id="@+id/button7"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/space2"
        android:layout_toStartOf="@+id/space2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="20sp"
        android:id="@+id/textView7"
        android:gravity="center"
        android:layout_alignBottom="@+id/kation1"
        android:layout_toLeftOf="@+id/button7"
        android:layout_toEndOf="@+id/textView5"
        android:layout_alignTop="@+id/kation1"
        android:layout_toRightOf="@+id/textView5" />

    <TextView
        android:text="@string/aq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:gravity="left|bottom"
        android:textSize="16sp"
        android:layout_alignTop="@+id/kation1"
        android:layout_toRightOf="@+id/kation1"
        android:layout_toEndOf="@+id/kation1"
        android:layout_alignBottom="@+id/kation1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="הכנס יון שלילי"
        android:maxLines="1"
        android:lines="1"
        android:id="@+id/anion1"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="➙"
        android:textSize="20sp"
        android:id="@+id/textView8"
        android:gravity="center"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/compound1"
        android:hint=""
        android:textSize="20sp"
        android:gravity="left|center"
        android:layout_alignBottom="@+id/textView7"
        android:layout_toRightOf="@+id/textView8"
        android:layout_alignTop="@+id/textView8" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:gravity="left|bottom"
        android:textSize="16sp"
        android:layout_alignBottom="@+id/textView8"
        android:layout_toRightOf="@+id/compound1"
        android:layout_alignTop="@+id/compound1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kation1"
        android:maxLines="1"
        android:hint="הכנס יון חיובי"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/button7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/aq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|bottom"
        android:textSize="16dp"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/textView7"
        android:layout_toRightOf="@+id/anion1"
        android:layout_toEndOf="@+id/anion1"
        android:layout_alignBottom="@+id/textView7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="נקה"
        android:onClick="clearPre"
        android:id="@+id/button6"
        android:layout_alignBottom="@+id/space2"
        android:layout_toRightOf="@+id/space2"
        android:layout_toEndOf="@+id/space2" />

    <Space
        android:layout_height="20dp"
        android:layout_width="20dp"
        android:id="@+id/space2"
        android:layout_alignBottom="@+id/button7"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
